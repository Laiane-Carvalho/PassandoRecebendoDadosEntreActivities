<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="testeadapt3.cursoandroid2.com.passandodadosentreactivities.Tela1Activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tela 1..."
        android:textSize="15dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/textNomeTela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:inputType="textPersonName"
        android:imeOptions="actionNext"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textEmailTela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/botaoAceitarDadosTela1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceitar dados"
            android:onClick="aceitarDados"/>
        <Button
            android:id="@+id/botaoRejeitarDadosTela1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejeitar dados"
            android:onClick="rejeitarDados"/>
    </LinearLayout>


</LinearLayout>
