<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="testeadapt3.cursoandroid2.com.passandodadosentreactivities.Tela2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Tela 2..."
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textNomeTela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textEmailTela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/botaoAceitarDadosTela2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceitar dados"
            android:onClick="aceitarDados"/>

        <Button
            android:id="@+id/botaoRejeitarDadosTela2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejeitar dados"
            android:onClick="rejeitarDados"/>
    </LinearLayout>
</LinearLayout>
